# Only format staged files that match our patterns (much faster than formatting all files)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx|json|css|md)$')

if [ -n "$STAGED_FILES" ]; then
  echo "Formatting staged files..."
  echo "$STAGED_FILES" | xargs npx prettier --write
  git add $STAGED_FILES
else
  echo "No staged files need formatting"
fi
