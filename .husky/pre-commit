# Only format staged .ts and .tsx files (skip slow package.json formatting)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$')

if [ -n "$STAGED_FILES" ]; then
  echo "Formatting staged TypeScript files..."
  echo "$STAGED_FILES" | xargs npx prettier --write
  git add $STAGED_FILES
else
  echo "No staged TypeScript files need formatting"
fi
