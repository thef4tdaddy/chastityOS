{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}"
  },
  "hooks": {
    "before:init": ["npm run lint", "npm run typecheck"],
    "after:bump": "npm run build"
  }
}